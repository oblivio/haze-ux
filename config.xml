<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.oblivio.haze"
        version     = "1.0.7" >

    <!-- versionCode is optional and Android only -->

    <name>Haze</name>
	<icon src="img/haze-logo.jpg"/>
    <description>
        Haze is an off the record communication platform. 
    </description>

    <author href="https://www.fabian-valle.com/" email="">
        Fabian Valle
    </author>

<!-- iPhone 6 / 6+ -->
<icon src="icons/apple-icon-180x180.png" platform="ios" width="180" height="180" />

<!-- iPhone / iPod Touch  -->
<icon src="icons/apple-icon-60x60.png" platform="ios" width="60" height="60" />
<icon src="icons/apple-icon-120x120.png" platform="ios" width="120" height="120" />

<!-- iPad -->
<icon src="icons/apple-icon-76x76.png" platform="ios" width="76" height="76" />
<icon src="icons/apple-icon-152x152.png" platform="ios" width="152" height="152" />

<!-- Settings Icon -->
<icon src="icons/apple-icon-57x57.png" platform="ios" width="57" height="57" />



<gap:plugin name="cordova-plugin-canvas2image" source="npm" />
<gap:plugin name="cordova-plugin-whitelist" source="npm" />
<gap:plugin name="cordova-plugin-inappbrowser" source="npm" />

<feature name="http://api.phonegap.com/1.0/network" />

<access origin="https://*.hazedaily.com" subdomains="true" />
<access origin="https://*.firebaseio.com" subdomains="true" />
<access origin="https://*.googleapis.com" subdomains="true" />

<preference name="phonegap-version" value="cli-6.1.0" />

</widget>


