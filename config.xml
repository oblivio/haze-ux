<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.oblivio.haze"
        version     = "1.0.7" >

    <!-- versionCode is optional and Android only -->

    <name>Haze</name>
	<icon src="img/haze-logo.jpg"/>
    <description>
        Haze is an off the record communication platform. 
    </description>

    <author href="https://www.fabian-valle.com/" email="">
        Fabian Valle
    </author>

<gap:plugin name="cordova-plugin-canvas2image" source="npm" />
<gap:plugin name="cordova-plugin-whitelist" source="npm" />
<gap:plugin name="cordova-plugin-inappbrowser" source="npm" />

<feature name="http://api.phonegap.com/1.0/network" />

<access origin="https://*.hazedaily.com" subdomains="true" />
<access origin="https://*.firebaseio.com" subdomains="true" />
<access origin="https://*.googleapis.com" subdomains="true" />

<preference name="phonegap-version" value="cli-6.1.0" />

</widget>


